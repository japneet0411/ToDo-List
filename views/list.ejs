<%-include("header")-%>
  <div class="box" id="heading">
    <h1><%= heading %></h1>
  </div>

  <div class="box">
    <% newitem.forEach(function(item){ %>
      <form  action="/delete" method="post">


      <div class="item">
        <input type="checkbox" name="checkbox" value="<%=item._id %>" onChange="this.form.submit()">
        <p><%=item.name%></p>
        <input type="hidden" name="ListName" value="<%=heading %>"></input>
      </div>
      </form>
        <%  });%>






    <form class="item" action="/" method="post">
      <input type="text" name="ListItem" placeholder="Add Items" autocomplete="off">
      <button type="submit" name="list" value="<%=heading %>">+</button>
    </form>
  </div>


<%-include("footer")-%>
